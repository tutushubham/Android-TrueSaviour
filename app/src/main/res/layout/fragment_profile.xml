<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="Logo"
            android:src="@drawable/navbar_logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:elevation="4dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:background="@color/Dark"

            android:paddingBottom="24dp">



            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntul"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Shubham"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:fontFamily="@font/ubuntul"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Vaidik Technologies"
                android:id="@+id/user_profile_email"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/full_name"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="20dp"
                android:fontFamily="@font/ubuntul"
                android:focusable="true"
                android:text="Full Name" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/full_email"
                android:layout_margin="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:fontFamily="@font/ubuntul"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Email" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/full_phone"
                android:background="#fff"
                android:fontFamily="@font/ubuntul"
                android:elevation="4dp"
                android:padding="20dp"
                android:focusable="true"
                android:text="Phone number not available" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ubuntul"
                android:layout_marginBottom="3dp"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="20dp"
                android:focusable="true"
                android:text="free/premium user" />

            <Button
                android:id="@+id/accountUpgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntul"
                android:layout_below="@id/img2"
                android:layout_margin="16dp"
                android:background="@color/Buttoncol"
                android:text="Upgrade Account"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
